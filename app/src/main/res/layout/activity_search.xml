<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:theme="@style/Theme.iHealthe.Splash">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9589405733905435/1936359587"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            ads:layout_constraintTop_toBottomOf="@+id/adView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_background"
                    android:elevation="6dp"
                    android:queryHint=""
                    app:iconifiedByDefault="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/filter_by_category"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:chipSpacing="8dp"
                    app:selectionRequired="false"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTodas"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_categories"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCafe"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLanche"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/snack"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAlmocoJantar"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lunch_and_dinner"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBaixoCarbo"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lowcarb"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAltaProteina"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/high_protein"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPreTreino"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pre_workout"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPosTreino"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/post_workout"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipVegano"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vegan"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipVegetariano"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vegetarian"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSobremesas"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fit_dessert"
                        android:textColor="@color/chip_text_color_selector"
                        app:chipBackgroundColor="@color/chip_background_selector" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/search_results_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/search_results"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/title_empty_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_something"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        ads:layout_constraintEnd_toEndOf="@+id/emptyListImage"
                        ads:layout_constraintStart_toStartOf="@+id/emptyListImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/emptyListImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/plant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_empty_state" />

                    <TextView
                        android:id="@+id/subtitle_empty_state"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/search_for_your_recipes"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        ads:layout_constraintEnd_toEndOf="@+id/emptyListImage"
                        ads:layout_constraintStart_toStartOf="@+id/emptyListImage"
                        ads:layout_constraintTop_toBottomOf="@+id/emptyListImage" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:listitem="@layout/item_recipes_home" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
